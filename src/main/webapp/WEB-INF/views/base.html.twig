<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="/{{ contextRoot }}/resources/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/{{ contextRoot }}/resources/css/style.css" />
        
        <title>Pebble</title>
    </head>
    <body>
    
    	<div class="pebble-nav navbar navbar-inverse navbar-fixed-top" role="navigation">
    		<div class="container">
    			<div class="navbar-header">
			    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
				    </button>
				    <a class="navbar-brand" href="home">Pebble</a>
			  	</div>
			  	
				<div class="collapse navbar-collapse navbar-ex1-collapse">
					<ul class="nav navbar-nav">
						{%  block navigation %}
							{{ _self.navItem("Home", "home", "Home" is equalTo(activeNav) ) }}
							{{ _self.navItem("Documentation", "documentation", "Documentation" is equalTo(activeNav) ) }}
							{{ _self.navItem("Release Notes", "release-notes", "Release Notes" is equalTo(activeNav) ) }}
						{% endblock navigation %}
				    </ul>
				</div>
    		</div><!-- end nav container -->
    	</div><!-- end navbar -->
    	
    	<div class="pebble-header">
    		<div class="container">
    			{% block pageheader %}{% endblock pageheader %}
    		</div>
    	</div>
    
    	<div class="container">
        	<div id="content">
        		{% block content %}{% endblock content %}
    		</div>
		</div>
        
        <div id="footer">
        	{% block footer %}{% endblock footer %}
        </div>
        
        <script src="//code.jquery.com/jquery.js"></script>
        <script src="/{{ contextRoot }}/resources/js/bootstrap.min.js"></script>
    </body>
</html>

{% macro navItem(name, href, active) %}
	<li class="{{ active? "active" : "" }}"><a href="/{{contextRoot}}/{{ href }}">{{ name }}</a></li>
{% endmacro %}
