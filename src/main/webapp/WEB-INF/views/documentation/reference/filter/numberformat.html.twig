{% extends "documentation/reference/component" %}

{% block componentDetails %}
	<p>
		The <code>numberformat</code> filter is used to format a decimal number. Behind the scenes
		it uses <code>java.text.DecimalFormat</code>. 		 
	</p>
	
	<p>
		<pre><code>{{ 
'
{{ 3.141592653 | numberformat("#.##") }}
'
		| trim | escape }}</code></pre>
	</p>
			<p>The above example will output the following:</p>
	<pre><code>{{ 
'
3.14
'
		| trim | escape }}</code></pre>	


{% endblock componentDetails %}
	